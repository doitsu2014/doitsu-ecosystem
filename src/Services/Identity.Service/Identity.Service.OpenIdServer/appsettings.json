  "SerilogMinIOSetting": {
    "Url": "",
    "AccessKeyId": "service.identity",
    "AccessKeySecret": "",
    "Path": "service.identity.log.txt",
    "BucketName": "service.identity.bucket",
    "BucketPath": "logs",
    "LogEventLevel": "Debug",
    "BatchingPeriod": "00:00:05",
    "IsJsonFormatter": true,
    "RollingInterval": "Hour"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "[{Timestamp:HH:mm:ss}-{Level}-{ThreadId}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "[{Timestamp:HH:mm:ss}-{Level}-{ThreadId}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Identity.Service.OpenIdServer"
    }
  },
  "AllowedOrigins": "*",
  "AllowedHosts": "*",
  "EncryptAccessToken": false
}